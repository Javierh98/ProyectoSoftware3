@{
    ViewBag.Title = "Contactenos";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Ingrese sus consultas.</h3>
    </div>
    <div class="panel-body">
        <form class="form-horizontal" role="form">
            <div class="form-group row">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-2" style="font-weight:bold">Correo electrónico</div>
                <div class="input-group col-sm-6">
                    <span class="input-group-addon">@Html.Raw("@")</span>
                    <input type="text" class="form-control" placeholder="Ingresa tu correo electrónico" required>
                </div>
                <div class="col-sm-2">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-2" style="font-weight:bold">Contraseña</div>
                <div class="col-sm-6">
                    <input type="password" class="form-control" id="confirmpass" placeholder="Confirmanos tu contraseña" required>
                </div>
                <div class="col-sm-2">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-2" style="font-weight:bold">Confirmar contraseña</div>
                <div class="col-sm-6">
                    <input type="password" class="form-control" id="confirmpass" placeholder="Confirmanos tu contraseña" required>
                </div>
                <div class="col-sm-2">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-2" style="font-weight:bold">Escribenos aquí</div>
                <div class="col-sm-6">
                    <textarea col="5" rows="5" class="form-control" placeholder="Escribenos tu consulta" required></textarea>
                </div>
                <div class="col-sm-2">
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer" style="overflow:hidden;text-align:right;">
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success btn-sm">Enviar</button>
                <button type="submit" class="btn btn-default btn-sm">Cancelar</button>
            </div>
        </div>
    </div>
</div>