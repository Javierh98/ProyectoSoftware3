@using System.Data;
@using Comunes;
@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Images/pexels-photo-1020313.jpeg" alt="a" class="img-responsive">
                <div class="carousel-caption">
                    <h1>"Enfócate en soñar <br />y nosotros te ayudamos a cumplir"</h1>
                </div>
            </div>
            <div class="item">
                <img src="~/Images/pexels-photo.jpg" alt="a" class="img-responsive">
                <div class="carousel-caption">
                    <h2>Cuotas flexibles</h2>
                    <h3>Liderando el mercado en gracias a las bajas cuotas</h3>
                </div>
            </div>
            <div class="item">
                <img src="~/Images/pexels-photo(1).jpg" alt="a" class="img-responsive">
                <div class="carousel-caption">
                    <h2>En la comodidad de tu casa</h2>
                    <h3>Encuentras bienes a los mejores precios</h3>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="container">
    <table class="table table-hover " id="tbl">
        <thead>
            <h1>
                <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
                Mira nuestras últimas ofertas que tenemos para ti
            </h1>

            <tr style="background-color: #3163B8; color:white">
                <td style="text-align:center;"><h4>Número del bien</h4></td>
                <td style="text-align:center;"><h4>Nombre</h4></td>
                <td style="text-align:center;"><h4>Costo</h4></td>
                <td style="text-align:center;"><h4>Avaluo</h4></td>
                <td style="text-align:center;"><h4>Estado</h4></td>
                <td style="text-align:center;"><h4>Ubicación</h4></td>
            </tr>
        </thead>
        @{
            CapaNegocios.Clases.DetalleBien vDetalle = new CapaNegocios.Clases.DetalleBien();
            foreach (DataRow item in vDetalle.Select_Tres().Rows)
            {
                string vNoBien = item["ID_Detalle_Bien"].ToString();
                string vNombreBien = item["Nombre_Detalle_Bien"].ToString();
                string vCostoBien = item["Costo_Detalle_Bien"].ToString();
                string vAvaluoBien = item["Avaluo_Detalle_Bien"].ToString();
                string vEstadoBien = item["Estado_Detalle_Bien"].ToString();
                string vUbicacionien = item["Ubicacion_Bien"].ToString();

                <tr>
                    <td class="numero" style="background-color:#dddddd; text-align:center;">@vNoBien</td>
                    <td style="background-color:#eeeeee; text-align:center;">₡ @vNombreBien</td>
                    <td style="background-color:#dddddd; text-align:center;">₡ @vCostoBien,00</td>
                    <td style="background-color:#eeeeee; text-align:center;">₡ @vAvaluoBien</td>
                    <td style="background-color:#dddddd; text-align:center;">₡ @vEstadoBien</td>
                    <td style="background-color:#eeeeee; text-align:center;">₡ @vUbicacionien</td>
                </tr>
            }
        }
    </table>
</div>

<h1>
    <span class="glyphicon glyphicon-usd" aria-hidden="true"></span>
    Conoce sobre nuestro tipo de cambio
</h1>
<div class="container">
    <div class="row">
        <h3 class="badger-left badger-danger" data-badger="Compra altual del $ Dolar" id="tipoCambio">
            La compra del dolar se encuentra en: ₡505 <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
        </h3>
        <h3 class="badger-right badger-success" data-badger="Venta actual del $ Dolar" id="tipoCambio">
            La venta del dolar se encuentra en: ₡510 <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
        </h3>
    </div>
</div>

